<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormCV.MainPage">

    <StackLayout >

         <Label Text="FORMULARIO" HorizontalTextAlignment="Center" TextColor="RosyBrown" FontSize="36"/>

        <Frame Margin="10">
            <Entry x:Name="paraNombre" Keyboard="Chat" Placeholder="Nombre"/>
        </Frame>
        <Frame Margin="10">
            <Entry x:Name="paraApellido" Keyboard="Chat" Placeholder="Apellido"/>
        </Frame>
        <Frame Margin="10">
            <Entry x:Name="paraEmail" Keyboard="Chat" Placeholder="E-mail"/>
        </Frame>
        <Frame Margin="10">
            <Entry x:Name="paraDNI" Keyboard="Chat" Placeholder="DNI"/>
        </Frame>
        
        <Button Text="Enviar" TextTransform="None" HorizontalOptions="Center" Clicked="Button_Clicked"/>

        </StackLayout>

</ContentPage>
